<p id="notice"><%= notice %></p>

<h1 class="text-center text-white">Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Status</th>
      <th>Checkout</th>
      <th>Checkin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= book.checkout %></td>
        <td><%= book.checkin %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<nav class="navbar navbar-light bg-info">
  <form class="form-inline">  
    <button type="button" class="btn btn-light btn-lg"><%= link_to 'New Book', new_book_path %></button>
  </form>